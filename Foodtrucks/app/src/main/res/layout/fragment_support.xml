<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".ui.support.SupportFragment">

    <Button
        android:id="@+id/buttonemail"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewemail"
        android:layout_marginStart="51dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/buttoncall"
        android:fontFamily="monospace"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewtitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="220dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Contact us Through:"
        android:textColor="#000000"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/imageViewcall"
        android:layout_width="74dp"
        android:layout_height="81dp"
        android:layout_below="@+id/textViewtitle3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_local_phone_24" />

    <Button
        android:id="@+id/buttoncall"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewcall"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:shadowColor="#000000"
        android:text="Call"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewemail"
        android:layout_width="74dp"
        android:layout_height="81dp"
        android:layout_below="@+id/textViewtitle3"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imageViewcall"
        android:src="@drawable/ic_baseline_email_24" />
</RelativeLayout>